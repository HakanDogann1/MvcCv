@using MvcCv.Models.Entity
@model List<TBLHobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Hobi Düzenleme sayfası</h2>
<br />

<form method="post">
    @foreach (var item in Model)
    {

        <div>
            <label>Açıklama 1</label>
            <textarea rows="5" class="form-control" name="Aciklama1">@item.Aciklama1</textarea>
        </div>
        <div>
            <label>Açıklama 2</label>
            <textarea rows="5" class="form-control" name="Aciklama2">@item.Aciklama2</textarea>
        </div>

    }
    <div><button class="btn btn-info">Güncelle</button></div>
</form>

