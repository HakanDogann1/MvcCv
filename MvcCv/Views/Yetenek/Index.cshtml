@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ 
    string renk = "";
}
@{ string labelRenk = "";}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Yetenek Listem</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 10px">#</th>
                                                <th>Yetenek</th>
                                                <th>Derece</th>
                                                <th style="width: 40px">Oran</th>
                                                <th style="text-align:center;">Sil</th>
                                                <th style="text-align:center;">Güncelle</th>
                                            </tr>
                                        </thead>
                                        <br />
                                        <div>
                                            <a href="/Yetenek/YetenekEkle/" class="btn btn-primary">Yetenek Ekle</a>
                                        </div>
                                        <br />
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                if (item.Oran >= 0 && item.Oran <= 50)
                                                {
                                                    renk = "progress-bar bg-danger";
                                                    labelRenk = "badge bg-danger";
                                                }
                                                else if (item.Oran >= 50 && item.Oran <= 100)
                                                {
                                                    renk = "progress-bar bg-success";
                                                    labelRenk = "badge bg-success";
                                                }
                                                <tr>
                                                    <td>@item.Id</td>
                                                    <td>@item.Yetenek</td>
                                                    <td>
                                                        <div class="progress progress-xs">
                                                            <div class="@renk" style="width:@item.Oran%"></div>
                                                        </div>
                                                    </td>
                                                    <td><span class="@labelRenk">@item.Oran%</span></td>
                                                    <td style="text-align:center;width:300px;">
                                                        <a class="btn btn-danger btn-sm" href="/Yetenek/YetenekSil/@item.Id"><i class="fas fa-trash"></i>Sil</a>
                                                    </td>
                                                    <td style="text-align: center; width:300px;">
                                                        <a class="btn btn-info btn-sm" href="/Yetenek/YetenekGüncelle/@item.Id"> <i class="fas fa-pencil-alt"></i>Güncelle</a>
                                                    </td>

                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                           
                            <!-- /.card -->
                        </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>


